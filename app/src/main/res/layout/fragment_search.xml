<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="412dp"
      android:layout_height="216dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/shape_33" />

  <Button
      android:id="@+id/search_btn"
      android:layout_width="80dp"
      android:layout_height="38dp"
      android:layout_marginTop="100dp"
      android:background="@drawable/rounded_button"
      android:text="@android:string/search_go"
      android:textColor="#FFFFFF"
      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.885"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.250" />

  <SearchView
      android:id="@+id/searchView"
      android:layout_width="236dp"
      android:layout_height="38dp"
      android:iconifiedByDefault="false"
      android:queryHint="Search here"
      app:actionViewClass="android.support.v7.widget.SearchView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/search_btn"
      app:layout_constraintHorizontal_bias="0.649"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.167"
      app:theme="@style/SearchViewStyle"></SearchView>

  <TextView
      android:id="@+id/search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/lobster"
      android:text="Search For Recipe"
      android:textColor="#FFFFFF"
      android:textSize="25sp"
      app:layout_constraintBottom_toTopOf="@+id/searchView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.242" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Your ingredients (separated with comma)"
      android:textColor="#FFFFFF"
      app:layout_constraintBottom_toTopOf="@+id/searchView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/search"
      app:layout_constraintVertical_bias="0.394" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/new_recycler"
      android:layout_width="match_parent"
      android:layout_height="513dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintVertical_bias="0.0"
      android:background="@null">

  </androidx.recyclerview.widget.RecyclerView>

  <ListView
      android:id="@+id/search_item_list"
      android:layout_width="236dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:background="@drawable/rounded_button_white"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.17"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/searchView"
      app:layout_constraintVertical_bias="0"></ListView>


</androidx.constraintlayout.widget.ConstraintLayout>